<div class="header">
    <%= form_tag sessions_path, :method => :delete do %>
        <%= submit_tag 'Sign Out', :class => 'sign-out btn btn-primary' %>
    <% end %>

    <div class="top-links">
        <% if session[:user_type] == 'user' -%>
            <%= link_to "My Dashboard", user_path(session[:user_id]) %>
        <% else -%>
            <%= link_to "My Dashboard", venue_admin_path(session[:user_id]) %>
        <% end -%>
        <%= link_to 'Find Friends', users_path %>
    </div>
</div>
<div class="List-wrapper">
    <h2 class="List-title page-title">All Venues</h2>
    <div class="List-content">
        <div class="Search-tabs">
            <div class="Search-tab">
                <%= link_to "Events", events_path %>
            </div>
            <div class="Search-tab highlight">
                Venues
            </div>
        </div>
        <div class="List-tableWrapper">
            <div class="Filters-wrapper">    
                <%= form_tag venues_url, method: :get, class: "Filters-form" do %>   
                    <%= label_tag :search %>
                    <%= search_field_tag :search, params[:search], class: "Search-bar" %><br><br>

                    <%= label_tag :filter_venue_type, "Venue Type:" %>
                    <%= select_tag :filter_venue_type, options_for_select(Venue.available_venue_types, params[:filter_venue_type]), include_blank: true, class: "form-select" %>       

                    <%= label_tag :filter_price_range, "Price Range:" %>
                    <%= select_tag :filter_price_range, options_for_select(Venue.available_price_ranges, params[:filter_price_range]), include_blank: true, class: "form-select" %>
                    
                    <%= label_tag :filter_attire, "Usual Attire:" %>
                    <%= select_tag :filter_attire, options_for_select(Venue.available_attires, params[:filter_attire]), include_blank: true, class: "form-select" %>

                    <%= submit_tag "Go", class: "btn" %>
                <% end %>
                <button class="btn map-button" id="venues_map_view">View Venues Map</button>
            </div>  
            <table class="List-table table table-striped col-md-12" id="venues">
                <tbody>
                    <% @venues.each do |venue| %>
                        <tr class="List-row" border="1">
                            <td class="List-item">
                                <%= link_to "#{venue.name}", venue_path(venue) %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>