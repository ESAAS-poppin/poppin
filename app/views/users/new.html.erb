<div class="page-title login-title">Create an Account</div>

<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% end %>

<%= form_tag users_path, :class => 'form login-form' do %>
    <%= label :user, :username, 'Username', :class => 'login-form-label' %>
    <%= text_field :user, :username, :class => 'form-control' %><br><br/>
    <%= label :user, :password, 'Password', :class => 'login-form-label' %>
    <%= text_field :user, :password, :class => 'form-control' %><br><br/>
    <%= label :user, :email, 'Email', :class => 'login-form-label' %>
    <%= text_field :user, :email, :class => 'form-control' %><br><br/>
    <%= label :user, :age, 'Age', :class => 'login-form-label' %>
    <%= number_field :user, :age, :class => 'form-control' %>
    <br/><br/>
    <%= submit_tag 'Create Account', :class => 'btn btn-primary' %>
    <br/><br/>
    <%= link_to 'Back to Login', new_sessions_path, :class => 'link' %>
<% end %>