<h1>Create an Account</h1>

<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% end %>

<%= form_tag users_path, :class => 'form' do %>
    <%= label :user, :username, 'Username', :class => 'col-form-label' %>
    <%= text_field :user, :username, :class => 'form-control' %><br>
    <%= label :user, :password, 'Password', :class => 'col-form-label' %>
    <%= text_field :user, :password, :class => 'form-control' %><br>
    <%= label :user, :email, 'Email', :class => 'col-form-label' %>
    <%= text_field :user, :email, :class => 'form-control' %><br>
    <%= label :user, :age, 'Age', :class => 'col-form-label' %>
    <%= number_field :user, :age, :class => 'form-control' %>
    <br/>
    <%= submit_tag 'Create Account', :class => 'btn btn-primary' %>
    <%= link_to 'Back to Login', new_sessions_path, :class => 'btn btn-primary' %>
<% end %>