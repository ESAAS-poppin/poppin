<h1>Welcome to Poppin!</h1>

<% flash.each do |type, msg| %>
    <div>
      <%= msg %>
    </div>
  <% end %>

<%= form_tag sessions_path, :class => 'form' do %>
    <%= label :user, :username, 'Username', :class => 'col-form-label' %>
    <%= text_field :user, :username, :class => 'form-control' %>
    <%= label :user, :password, 'Password', :class => 'col-form-label' %>
    <%= text_field :user, :password, :class => 'form-control' %>
    <br/>
    <%= submit_tag 'Login', :class => 'btn btn-primary' %>
    <%= link_to 'Create Account', new_user_path, :class => 'btn btn-primary' %>
<% end %>