<div class="page-title login-title">Welcome to Poppin!</div>

<% flash.each do |type, msg| %>
  <%= content_tag(:div, msg, class: "flash flash-#{type}") %>
<% end %>

<%= form_tag sessions_path, :class => 'form login-form' do %>
    <label for="type" class="login-form-label">I am a:</label>
    <% [ 'venue_admin', 'user'  ].each do |type| %>
      <%= radio_button_tag 'type', type, @type == type, checked: true %>
      <%= label_tag "#{type}" %>
    <% end %>
    <br><br>
    <%= label :user, :username, 'Username', :class => 'login-form-label' %>
    <%= text_field :user, :username, :class => 'form-control' %>
    <br/>
    <br/>
    <%= label :user, :password, 'Password', :class => 'login-form-label' %>
    <%= password_field :user, :password, :class => 'form-control' %>
    <br/>
    <br/>
    <%= submit_tag 'Login', :class => 'btn btn-primary login-button' %>
    <br/>
    <%= link_to 'Create User Account', new_user_path, :class => 'link' %><br/><br/>
    <%= link_to 'Create Venue Admin Account', new_venue_admin_path, :class => 'link' %>
<% end %>